%html
  %head
    %title Banyan Tree Project
    = stylesheet_link_tag 'api'
    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Radley|Exo|Open+Sans'
    -#= javascript_include_tag 'application'
    = csrf_meta_tags

  %body
    #content
      - if flash[:notice]
        #notice.message= flash[:notice]
      - elsif flash[:warning]
        #warning.message= flash[:warning]
      - elsif flash[:error]
        #error.message= flash[:error]

      = yield
      .clear
