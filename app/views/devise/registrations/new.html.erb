<h2>Register for an account</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="notice">
    <p>
      Items marked with a <span class="required">*</span> are required.
    </p>
  </div>
  <div><%= f.label :email %><span class="required">*</span><br />
  <%= f.email_field :email %></div>

  <div><%= f.label :password %><span class="required">*</span><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %><span class="required">*</span><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.submit "Register for an account" %></div>
<% end %>

<%= render "links" %>
